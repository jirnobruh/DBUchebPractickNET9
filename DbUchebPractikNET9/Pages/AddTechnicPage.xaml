<Page x:Class="DbUchebPractikNET9.Pages.AddTechnicPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#FFF2F2F2">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <DockPanel Grid.Row="0" Margin="0 0 0 20">
            <Button Content="Назад"
                    Width="100"
                    Height="35"
                    DockPanel.Dock="Left"
                    Click="Back_Click"/>

            <TextBlock Text="Добавление техники"
                       FontSize="28"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </DockPanel>

        <!-- Форма -->
        <StackPanel Grid.Row="1" Width="400" HorizontalAlignment="Left">

            <TextBlock Text="Название"/>
            <TextBox x:Name="TitleBox" Height="30"/>

            <TextBlock Text="Описание" Margin="0 10 0 0"/>
            <TextBox x:Name="DescriptionBox" Height="80" TextWrapping="Wrap"/>

            <TextBlock Text="Категория" Margin="0 10 0 0"/>
            <ComboBox x:Name="CategoryBox" Height="30"/>

            <TextBlock Text="Статус" Margin="0 10 0 0"/>
            <ComboBox x:Name="StatusBox" Height="30"/>

            <TextBlock Text="Цена/день" Margin="0 10 0 0"/>
            <TextBox x:Name="PriceBox" Height="30"/>

            <Button Content="Добавить"
                    Height="40"
                    Margin="0 20 0 0"
                    Click="Add_Click"/>
        </StackPanel>
    </Grid>
</Page>