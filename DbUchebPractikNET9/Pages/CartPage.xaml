<Page x:Class="DbUchebPractikNET9.Pages.CartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#FFF2F2F2">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <DockPanel Grid.Row="0" Margin="0 0 0 10">

            <Button Content="Назад"
                    Width="100"
                    Height="35"
                    DockPanel.Dock="Left"
                    Click="Back_Click"/>

            <TextBlock Text="Корзина"
                       FontSize="28"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0 0 0 0"/>
        </DockPanel>

        <!-- Таблица корзины -->
        <DataGrid x:Name="CartGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Technic.Title}" Width="*"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="100"/>
                <DataGridTextColumn Header="Цена/день" Binding="{Binding Technic.PricePerDay}" Width="120"/>
            </DataGrid.Columns>

        </DataGrid>

        <!-- Кнопка оформить заказ -->
        <Button Content="Оформить заказ"
                Grid.Row="2"
                HorizontalAlignment="Right"
                Width="180"
                Height="40"
                Margin="0 10 0 0"
                Click="MakeOrder_Click"/>
    </Grid>
</Page>