<Page x:Class="DbUchebPractikNET9.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#FFF2F2F2">

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Регистрация"
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

        <StackPanel Grid.Row="1"
                    Width="350"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,20,0,0">

            <TextBlock Text="Имя" FontSize="16"/>
            <TextBox x:Name="FirstNameBox" Height="35" FontSize="16" Margin="0,0,0,10"/>

            <TextBlock Text="Фамилия" FontSize="16"/>
            <TextBox x:Name="LastNameBox" Height="35" FontSize="16" Margin="0,0,0,10"/>

            <TextBlock Text="Телефон" FontSize="16"/>
            <TextBox x:Name="PhoneBox" Height="35" FontSize="16" Margin="0,0,0,10"/>

            <TextBlock Text="Email" FontSize="16"/>
            <TextBox x:Name="EmailBox" Height="35" FontSize="16" Margin="0,0,0,10"/>

            <TextBlock Text="Пароль" FontSize="16"/>
            <PasswordBox x:Name="PasswordBox" Height="35" FontSize="16" Margin="0,0,0,10"/>

            <Button Content="Создать аккаунт"
                    Height="40"
                    Background="#FF007ACC"
                    Foreground="White"
                    FontSize="18"
                    Click="RegisterButton_Click"/>

            <Button Content="Уже есть аккаунт? Войти"
                    Height="35"
                    Margin="0,10,0,0"
                    Click="GoToLogin_Click"/>
        </StackPanel>
    </Grid>
</Page>